<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:background="@drawable/mainbackground"
    tools:context="com.assignment3.dms.brickbreaker.ConnectPlayers">

    <Button
        android:id="@+id/discoverable_button"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        android:text="Make Discoverable"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/buttonshape"
        android:shadowColor="#1C42FF"
        android:shadowDx="1"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:layout_above="@+id/client_start_button"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="54dp"/>
    <Button
        android:id="@+id/server_start_button"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        android:text="Start as Server"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/buttonshape"
        android:shadowColor="#1C42FF"
        android:shadowDx="1"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:layout_below="@+id/client_start_button"
        android:layout_alignLeft="@+id/client_start_button"
        android:layout_alignStart="@+id/client_start_button"
        android:layout_marginTop="67dp" />

    <Button
        android:id="@+id/client_start_button"
        android:textColor="#FFFFFF"
        android:textSize="22sp"
        android:text="Start as Client"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/buttonshape"
        android:shadowColor="#1C42FF"
        android:shadowDx="1"
        android:shadowDy="0"
        android:shadowRadius="5"
        android:layout_centerVertical="true"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/status_textview"
        android:layout_alignParentTop="true"
        android:layout_above="@+id/discoverable_button"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />


</RelativeLayout>
